<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.estore.dao.IGoodsAttributeDao">
	
    <resultMap id="goodsAttributeMap" type="goodsAttribute" >
    	<id property="id" column="goods_attribute_id" javaType="Integer" jdbcType="INTEGER"/>
		<result property="goodsId" column="goods_id" javaType="String" jdbcType="VARCHAR"/>
		<result property="attributeValue1" column="attribute_value_1" javaType="Integer" jdbcType="INTEGER"/>
		<result property="attributeValue2" column="attribute_value_2" javaType="String" jdbcType="VARCHAR"/>
		<result property="attributeValue3" column="attribute_value_3" javaType="String" jdbcType="VARCHAR"/>
		<result property="categoryId" column="price" javaType="Integer" jdbcType="INTEGER"/>
		<result property="isAvaliable" column="back_account" javaType="Integer" jdbcType="INTEGER"/>
    	<result property="picture" column="front_account" javaType="String" jdbcType="VARCHAR"/>
    	<result property="memo" column="memo" javaType="String" jdbcType="VARCHAR"></result>
    </resultMap>            
    <sql id="goodsAttributeColumns">
    	goods_code,locale_type,goods_name,goods_description,category_id,is_avaliable,picture,goods_url,goods_price,back_account,front_account,memo,add_time
    </sql>
    <sql id="goodsAttributeValues">
    	#{goodsCode},#{localeType},#{goodsName},#{goodsDescription},#{categoryId},#{isAvaliable},#{picture},#{goodsUrl},#{goodsPrice},#{backAccount},#{frontAccount},#{memo},#{addTime}
    </sql>
    
    <!-- 通过商品id获取商品的属性信息 -->
    <select id="getByGoodsId" parameterType="int" resultMap="goodsAttributeMap">
    	select *
    	from t_goods_attribute
    	<where>
    		<if test="goodsId != null">
    			and goods_id = #{goodsId}
    		</if>
    	</where>
    </select>
</mapper>
